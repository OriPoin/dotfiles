# C
O_FLAGS="-march=native -O3 -pipe"
GRAPHITE="-fgraphite-identity -floop-nest-optimize"
SSP_FLAGS="-fno-stack-protector"
FLTO="-flto=auto -fuse-linker-plugin"
NOPLT="-fno-plt"
ALIGN="-fno-align-functions -fno-align-jumps -fno-align-loops -fno-align-labels"

COMMON_FLAGS="${O_FLAGS} ${GRAPHITE} ${SSP_FLAGS} ${FLTO} ${NOPLT} ${ALIGN}"

CFLAGS="${COMMON_FLAGS}"
CXXFLAGS="${COMMON_FLAGS}"
LDFLAGS="-Wl,-O3 -Wl,-no-as-needed -ljemalloc -Wl,--as-needed -Wl,--hash-style=gnu -Wl,--sort-common -Wl,--strip-all"

