# C
O_FLAGS="-march=native -O3 -pipe"
GRAPHITE="-fgraphite-identity -floop-nest-optimize"
SSP_FLAGS="-fno-stack-protector"
IPAPTA="-fipa-pta"
ALIGN="-fno-align-functions -fno-align-jumps -fno-align-loops -fno-align-labels"

# for valgrind 
STRLEN="-fno-builtin-strlen"

COMMON_FLAGS="${O_FLAGS} ${GRAPHITE} ${SSP_FLAGS} ${STRLEN} ${IPAPTA} ${ALIGN}"

CFLAGS="${COMMON_FLAGS}"
CXXFLAGS="${COMMON_FLAGS}"
LDFLAGS="-Wl,-O3 -Wl,--as-needed -Wl,--hash-style=gnu -Wl,--sort-common"

FEATURES="splitdebug"
